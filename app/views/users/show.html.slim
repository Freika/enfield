.container
  .col-sm-10.col-sm-offset-1.col-lg-8.col-lg-offset-2
    .col-sm-3
      .avatar = image_tag avatar_url(@user, 120)
      h4.text-center = @user.name
      h5.text-center = @user.email if @user.display_email

      - if @user.twitter_name
        h5.text-center
          ' Twitter:
          = link_to @user.twitter_name, "https://twitter.com/#{@user.twitter_name}"

      - if @user.github_name
        h5.text-center
          ' Github:
          = link_to @user.github_name, "https://github.com/#{@user.github_name}"

    .col-sm-9
      h3 = "Выполненных уроков: #{@activities.count}"
      - unless next_lesson_path.blank?
        .last_lesson_to = link_to "К последнему уроку", "/#{next_lesson_path}", class: "btn btn-success", type: "button"
      - @activities.each do |activity|
        .activity = show_activity(activity)

      .text-center = will_paginate @activities

  - title @user.name
